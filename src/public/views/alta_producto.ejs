<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Crear Nuevo Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/modoOscuro.css">
</head>
<body>
  <nav class="navbar bg-light px-3">
    <div class="container-fluid d-flex justify-content-end">
      <div class="form-check form-switch mb-0">
        <input class="form-check-input" type="checkbox" role="switch" id="modoToggle" />
        <label class="form-check-label" for="modoToggle">üåô</label>
      </div>
    </div>
  </nav>
  <div class="container my-5">
    <h2 class="mb-4">Crear Nuevo Producto</h2>
    <form id="form-crear" class="border p-4 shadow-sm">
      <div class="mb-3">
        <label for="sku" class="form-label">SKU</label>
        <input type="text" class="form-control" id="sku" required>
      </div>
      <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" required>
      </div>
      <div class="mb-3">
        <label for="precio_normal" class="form-label">Precio</label>
        <input type="number" class="form-control" id="precio_normal" min="0" step="0.01" required>
      </div>
        <div class="mb-3">
    <label for="categoria" class="form-label">Categor√≠a</label>
    <select class="form-control" id="categoria" required>
        <option value="">-- Selecciona una categor√≠a --</option>
        <option value="River plate">River plate</option>
        <option value="Boca juniors">Boca juniors</option>
    </select>
    </div>
      <div class="mb-3">
        <label for="imagen" class="form-label">Ruta de Imagen</label>
        <input type="text" class="form-control" id="imagen" placeholder="/img/producto.jpg" required>
      </div>
      <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="activo" checked>
        <label class="form-check-label" for="activo">Activo</label>
      </div>
      <button type="submit" class="btn btn-success">Crear Producto</button>
      <a href="/admin/dashboard" class="btn btn-secondary ms-2">Cancelar</a>
      <p id="mensaje" class="mt-3 fw-bold"></p>
    </form>
  </div>
  <script>
    const form = document.getElementById('form-crear');
    const mensaje = document.getElementById('mensaje');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const sku = document.getElementById('sku').value.trim();
      const nombre = document.getElementById('nombre').value.trim();
      const precio_normal = parseFloat(document.getElementById('precio_normal').value);
      const categoria = document.getElementById('categoria').value;
      const imagen = document.getElementById('imagen').value.trim();
      const activo = document.getElementById('activo').checked;
      const nuevoProducto = {sku, nombre, precio_normal, categoria, imagen, activo};
      try {
        const response = await fetch('/api/productos', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify(nuevoProducto),
        });
        const result = await response.json();
        if (response.ok) {
          mensaje.textContent = '‚úÖ Producto creado correctamente';
          mensaje.style.color = 'green';
          // Opcional: limpiar el formulario despu√©s de crear
          form.reset();
          // Opcional: redirigir despu√©s de 3 seg a dashboard
          setTimeout(() => {
            window.location.href = '/admin/dashboard';
          }, 500);
        } else {
          mensaje.textContent = `‚ùå Error: ${result.message || 'No se pudo crear el producto'}`;
          mensaje.style.color = 'red';
        }
      } catch (error) {
        mensaje.textContent = '‚ùå Error de red o servidor';
        mensaje.style.color = 'red';
        console.error(error);
      }
    });
  </script>
  <script>
    const toggle = document.getElementById('modoToggle');
    const label = toggle?.nextElementSibling;
    const body = document.body;
    const modoGuardado = localStorage.getItem('modo');
    if (modoGuardado === 'oscuro') {
      body.classList.add('dark-mode');
      if (toggle) {
        toggle.checked = true;
        label.textContent = '‚òÄÔ∏è';
      }
    }
    toggle?.addEventListener('change', () => {
      body.classList.toggle('dark-mode');
      const esOscuro = body.classList.contains('dark-mode');
      localStorage.setItem('modo', esOscuro ? 'oscuro' : 'claro');
      label.textContent = esOscuro ? '‚òÄÔ∏è' : 'üåô';
    });
  </script>
</body>
</html>